@model IslaamAdmin.Models.User
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (!User.Identity.IsAuthenticated)
{
    <div class="col-md-8 col-sm-10 col-xs-12">
        <div class="row no-gutters">
            <div class="col-sm-3"></div>
            <article class="form-group col-sm-6" id="formPage">
                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="form-group">
                        <label> Username </label>
                        <input asp-for="Username" type="text" name="username" id="username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label> Password </label>
                        <input type="password" asp-for="Password" name="password" id="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Submit" class="btn btn-primary btn-action" />
                </form>
            </article>
        </div>
    </div>
}
else
{
    <strong>Browse to one of your app features through the right dropdown</strong>
}