@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Islaam Admin Portal</title>

    <link href="~/lib/bootstrap/css/bootstrap-reboot.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    @*<link href="~/lib/floatLabel/float-label.min.css" rel="stylesheet" />*@
    @*<link href="~/css/site.css" rel="stylesheet" />*@
    <link href="~/css/style.less" rel="stylesheet/less" />
    <link href="~/css/style.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="~/lib/knockout/knockout-min.js"></script>

</head>
<body>

    <div class="container header">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#"><img src="~/images/islaamca.png" /></a>
                </div>
            </div>
        </div>
    </div>

    <div class="menu-container">
        <nav class="navbar navbar-default Administration nav-container">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="active">
                            <a href="@Url.Action("Login", "Account")">Login</a>
                        </li>
                    }
                    else
                    {
                        <li class="right-nav">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                    <i class="fa fa-user"></i><span>@User.Identity.Name</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="@Url.Action("Index","AppData")"><i class="fa fa-question-circle"></i><span>View Questions</span></a></li>
                                    <li><a href="@Url.Action("Index","Account")"><i class="fa fa-user"></i><span>View Users</span></a></li>
                                    <li><a href="@Url.Action("Logout","Account")"><i class="fa fa-sign"></i><span>LogOut</span></a></li>
                                </ul>
                            </div>
                        </li>



                    }
                </ul>
            </div>
        </nav>


        <div class="container-fluid breadcrumb-container">
            <div class="row breadcrumb">
                <div class="col-xs-10 col-xs-offset-1">

                </div>
            </div>

            <div class="row no-gutters">
                <div class="col-sm-12 Orange">
                    @RenderBody()
                </div>
            </div>

        </div>

    </div>
</body>
</html>